[bar/top]
font-0 = DejaVu Sans Mono Nerd Font Mono:size=17:style=Regular
font-1 = Noto Sans Symbols2:size=17:style=Regular;+2
font-2 = DejaVu Sans:size=17:style=Regular;+2

monitor=${env:MONITOR:}
modules-right = battery temperature wireless-network cpu memory date time
modules-left = i3 backlight pulseaudio title
; modules-center = title
width = 100%
height = 40
background = #BB000000
module-margin = 2
