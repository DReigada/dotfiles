#
# rtfpessoa bash settings
#

DOTFILES_DIR_DEFAULT="$HOME/.$(whoami)rc"
DOTFILES_DIR=${DOTFILES_DIR-$DOTFILES_DIR_DEFAULT}

if [ -d "$DOTFILES_DIR" ]; then
	# Theme
	source $DOTFILES_DIR/bash/themes/agnoster/agnoster.bash

	# Customize to your needs...
	for config_file in "$(ls $DOTFILES_DIR/shells/sources/*)"; do source $config_file; done
fi
